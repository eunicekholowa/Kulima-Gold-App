<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_View="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:elevation="3dp"
    tools:context=".SoyapiecesActivity">


    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Soya Pieces Flavours"
        android:textColor="@color/orange"
        android:textSize="25dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="116dp"
        tools:layout_editor_absoluteY="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="90dp"
        android:background="@drawable/white">
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="200dp"
                        android:layout_margin="4dp"
                        android:layout_marginBottom="10dp"
                        android:elevation="6dp"
                        card_View:cardCornerRadius="6dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="Golden Soya Pieces"
                                android:textColor="@color/orange"
                                android:textStyle="bold"
                                android:textSize="14dp" />

                            <ImageView
                                android:id="@+id/img1"
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:layout_marginTop="3dp"
                                android:src="@drawable/soyapieces" />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="MK1800/unit"
                                    android:textStyle="bold"
                                    android:paddingEnd="10dp"
                                    android:paddingStart="10dp"
                                    android:paddingTop="3dp"
                                    android:textColor="@color/orange"
                                    android:textSize="14dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/fadd6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@color/orange"
                                    android:gravity="center"
                                    android:text="+Add"
                                    android:textStyle="bold"
                                    android:paddingEnd="10dp"
                                    android:paddingStart="10dp"
                                    android:paddingTop="3dp"
                                    android:paddingBottom="3dp"
                                    android:textColor="@color/white"
                                    android:textSize="15dp" />

                            </LinearLayout>

                        </LinearLayout>


                    </androidx.cardview.widget.CardView>




                    <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="6dp"
                    card_View:cardCornerRadius="6dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Top Soy"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/img6"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/top" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="MK2000/kg"
                                android:textStyle="bold"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/orange"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fadd7"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/orange"
                                android:gravity="center"
                                android:text="+Add"
                                android:textStyle="bold"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_margin="4dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="6dp"
                    card_View:cardCornerRadius="6dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="Soya Chunks"
                            android:textColor="@color/orange"
                            android:textStyle="bold"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/img8"
                            android:layout_width="wrap_content"
                            android:layout_height="100dp"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/soyachunks" />



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="MK1000/kg"
                                android:textStyle="bold"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:textColor="@color/orange"
                                android:textSize="14dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/fadd8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/orange"
                                android:gravity="center"
                                android:text="+Add"
                                android:textStyle="bold"
                                android:paddingEnd="10dp"
                                android:paddingStart="10dp"
                                android:paddingTop="3dp"
                                android:paddingBottom="3dp"
                                android:textColor="@color/white"
                                android:textSize="15dp" />

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>


        </HorizontalScrollView>




        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>






