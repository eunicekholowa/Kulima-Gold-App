<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:padding="15dp"
                android:layout_centerVertical="true"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_search_24"
                android:padding="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
        <TextView
            android:layout_marginTop="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CATEGORIES"
            android:textSize="25dp"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-black"
            android:padding="10dp"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="110dp"
            android:background="@drawable/cooking">

            <TextView
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FOOD ITEMS"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <Button
                android:id="@+id/btn1"
                android:layout_width="150dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-22dp"
                android:backgroundTint="@color/blue"
                android:padding="20dp"
                android:shadowRadius="25"
                android:text="EXPAND ALL" />


        </RelativeLayout>
    </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="140dp"
                   android:layout_margin="10dp"
                   android:background="@drawable/white">

                   <ImageView
                       android:layout_width="120dp"
                       android:layout_height="120dp"
                       android:src="@drawable/mkango"
                       android:layout_marginTop="10dp"
                       android:padding="10dp"/>

                   <ImageView
                       android:layout_width="120dp"
                       android:layout_height="120dp"
                       android:layout_marginLeft="50dp"
                       android:layout_marginTop="10dp"
                       android:padding="10dp"
                       android:src="@drawable/mkango" />


                   <ImageView
                       android:layout_width="120dp"
                       android:layout_height="120dp"
                       android:layout_alignParentLeft="true"
                       android:layout_marginLeft="179dp"
                       android:layout_marginTop="10dp"
                       android:padding="10dp"
                       android:src="@drawable/soyabeans"/>



                   <ImageView
                       android:layout_width="120dp"
                       android:layout_height="120dp"
                       android:layout_alignParentLeft="true"
                       android:layout_marginLeft="268dp"
                       android:layout_marginTop="10dp"
                       android:padding="10dp"
                       android:src="@drawable/soyabeans" />

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_centerHorizontal="true"
                       android:text="SEEDS"
                       android:textColor="@color/black"
                       android:textSize="30dp" />

                   <Button
                       android:id="@+id/btn2"
                       android:layout_width="200dp"
                       android:layout_centerHorizontal="true"
                       android:layout_height="wrap_content"
                       android:layout_alignParentBottom="true"
                       android:layout_marginTop="20dp"
                       android:layout_marginBottom="-22dp"
                       android:backgroundTint="@color/blue"
                       android:padding="20dp"
                       android:shadowRadius="25"
                       android:text="EXPAND ALL" />

               </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:background="@drawable/pesitcides">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PESTICIDES"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btn3"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-22dp"
                android:backgroundTint="@color/blue"
                android:padding="20dp"
                android:shadowRadius="25"
                android:text="EXPAND ALL" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:background="@drawable/fert">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="OTHERS"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <Button
                android:id="@+id/btn4"
                android:layout_width="200dp"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-22dp"
                android:backgroundTint="@color/blue"
                android:padding="20dp"
                android:shadowRadius="25"
                android:text="EXPAND ALL" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>